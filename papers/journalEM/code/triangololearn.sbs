#!/bin/bash
#SBATCH -o /mnt/beegfs/rcabanas/dev/slurm.out

echo ${initseed}
maxiter=300

for i in $(seq 0 ${SLURM_NTASKS}); do
  s=$[init_seed+i]
  srun -n 1 -N 1 -c 1 /mnt/beegfs/rcabanas/singularity/credici.sif python3 -u triangololearn.py $maxiter $s 2> /dev/null &
done



wait



